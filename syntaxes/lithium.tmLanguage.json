{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Lithium",
  "scopeName": "source.lithium",
  "fileTypes": [
    "li",
    "lithium"
  ],
  "patterns": [
    {
      "include": "#imports"
    },
    {
      "include": "#comment"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#types"
    },
    {
      "include": "#classes"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#identifiers"
    }
  ],
  "repository": {
    "imports": {
      "patterns": [
        {
          "name": "meta.import.lithium",
          "begin": "^\\s*(import)\\s*(<)",
          "beginCaptures": {
            "1": {
              "name": "keyword.lithium"
            },
            "2": {
              "name": "punctuation.definition.import.begin.lithium"
            }
          },
          "end": ">|$",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.import.end.lithium"
            }
          },
          "patterns": [
            {
              "name": "string.quoted.other.lithium",
              "match": "[a-zA-Z_][a-zA-Z0-9_]*(\\.[a-zA-Z_][a-zA-Z0-9_]*)*"
            }
          ]
        }
      ]
    },
    "comment": {
      "patterns": [
        {
          "name": "comment.line.number-sign.lithium",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.lithium",
          "match": "\\b(for|while|if|else|fn|return|break|let|const|import|class|pub)\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.lithium",
          "match": "\\b(true|false|null|PI|E|VERSION|FILE|LINE)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.lithium",
          "match": "\\b(class)\\b"
        }
      ]
    },
    "classes": {
      "patterns": [
        {
          "name": "entity.name.type.lithium",
          "match": "(?<=\\bclass\\s+)[A-Za-z_][A-Za-z0-9_]*"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.lithium",
          "match": "(?<=\\bfn\\s+)[A-Za-z_][A-Za-z0-9_]*"
        },
        {
          "name": "support.function.lithium",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.lithium",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.lithium",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.lithium",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.lithium",
          "match": "[+\\-*/%!=<>]=?|&&|\\|\\||!|,|;|\\.|\\(|\\)|\\[|\\]|\\{|\\}"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.lithium",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    }
  }
}